{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit:
  // https://code.visualstudio.com/docs/editor/debugging#_launch-configurations
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node-terminal",
      "name": "xtunnel",
      "request": "launch",
      "command": "xtunnel http 3000"
    },
    {
      "type": "node-terminal",
      "name": "Run local dev server",
      "request": "launch",
      "command": "pnpm run dev",
      "cwd": "${workspaceFolder}",
      "skipFiles": ["!${workspaceRoot}/node_modules/**/*.js"],
      "runtimeArgs": ["--preserve-symlinks"]
    },
    {
      "type": "node-terminal",
      "name": "Run https dev server",
      "request": "launch",
      "command": "pnpm run dev:https",
      "cwd": "${workspaceFolder}",
      "skipFiles": ["!${workspaceRoot}/node_modules/**/*.js"],
      "runtimeArgs": ["--preserve-symlinks"],
      "resolveSourceMapLocations": [
        "${workspaceFolder}/**",
        "!**/node_modules/**",
        "node_modules/@telegram-auth/**/*.js",
        "node_modules/@telegram-auth/**/*.ts"
      ]
    },
    {
      "name": "Next.js: debug client-side",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:3000"
    },
    {
      "name": "Next.js: debug full stack",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/node_modules/.bin/next",
      "runtimeArgs": ["--inspect"],
      "skipFiles": ["<node_internals>/**"],
      "serverReadyAction": {
        "action": "debugWithEdge",
        "killOnServerStop": true,
        "pattern": "- Local:.+(https?://.+)",
        "uriFormat": "%s",
        "webRoot": "${workspaceFolder}"
      }
    },
    {
      "name": "Launch Chrome",
      "request": "launch",
      "type": "chrome",
      "url": "http://localhost:3000",
      "webRoot": "${workspaceFolder}"
    },
    {
      "name": "Attach to Chrome",
      "port": 9222,
      "request": "attach",
      "type": "chrome",
      "urlFilter": "http://localhost:3000/*", // use urlFilter instead of url!
      "webRoot": "${workspaceFolder}"
    },
    {
      "name": "custom script",
      "program": "${workspaceFolder}/test.js",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "node",
      // "externalConsole": true,
      "args": [
        // "--help",
      ]
    },
    {
      "name": "current javascript",
      "program": "${file}",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "node"
    },
    {
      "name": "current typescript",
      "program": "${file}",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "tsx"
    },
    {
      "name": "Node: gulp",
      "type": "node",
      "request": "launch",
      "program": "${workspaceRoot}/node_modules/gulp/bin/gulp.js",
      "console": "integratedTerminal",
      "args": ["build"]
    },
    {
      "name": "Node: webpack",
      "type": "node",
      "request": "launch",
      "program": "${workspaceRoot}/node_modules/gulp/bin/gulp.js",
      "console": "integratedTerminal",
      "args": ["build"]
    },
    {
      "name": "Jest single test",
      "type": "node-terminal",
      "request": "launch",
      "command": "pnpm exec jest --no-watch --testTimeout=60000 deleteUser.test"
    }
  ]
}
